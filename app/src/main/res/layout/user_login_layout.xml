<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/abc_action_bar_default_height_material"
        android:weightSum="1"
        >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome To My Android Apps"
        android:id="@+id/textView5"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_weight="0.23"
        android:textColor="@color/background_floating_material_light"
        android:textStyle="bold" />

    <EditText
        android:background="@drawable/edittext_rounded_style"
        android:hint="Username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUsernameLogin"
        android:outlineProvider="paddedBounds"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:padding="10dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsernameStatus"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:textStyle="bold|italic" />


    <EditText
        android:background="@drawable/edittext_rounded_style"
        android:hint="Password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPsswordLogin"
        android:outlineProvider="paddedBounds"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:padding="10dp"
        android:password="true"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPasswordStatus"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:textStyle="bold|italic" />

    <Button
        android:onClick="doLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_gravity="center_horizontal"
        android:textColorHighlight="#c4fdf7"
        android:background="#f6e748" />

    <TextView
        android:onClick="doUserRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User?? Sign Up Here"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/textview_selected"/>
       </LinearLayout>
</ScrollView>
</LinearLayout>