<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fefee4">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sorting Algorithm Benchmark"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:autoText="false"
            android:background="@android:color/holo_purple" />

        <EditText
        android:hint="Enter The Size of the Array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etarraysize"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choose Complexity"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="15dp"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rgcomplex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Case"
                android:id="@+id/rbtnbestcase"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Case"
                android:id="@+id/rbtnavgcase"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worst Case"
                android:id="@+id/rbtnworstcase"
                android:checked="false" />
        </RadioGroup>
    </LinearLayout>

        <Button
        android:onClick="generateArray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Generate Array"
        android:id="@+id/btngeneratearray"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/tvstatus1"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Choose Algorithm"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@android:color/holo_purple" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="BenchMark"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@android:color/holo_purple" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Bubble Sort"
            android:id="@+id/btnbubsort"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:hint="Result"
            android:gravity="center"
            android:id="@+id/tvbubsort"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Selection Sort"
            android:id="@+id/btnselsort"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="Result"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvselsort"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Insertion Sort"
            android:id="@+id/btninsersort"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="Result"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvinsersort"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Quick Sort"
            android:id="@+id/btnquicksort"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="Result"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvquicksort"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Merge Sort"
            android:id="@+id/btnmergesort"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="Result"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvmergesort"
            android:layout_row="5"
            android:layout_column="2" />

        <Button
            android:onClick="doBenchmark"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Heap Sort"
            android:id="@+id/btnheapsort"
            android:layout_row="6"
            android:layout_column="0" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="Result"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvheapsort"
            android:layout_row="6"
            android:layout_column="2" />


    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/tvstatus2"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:gravity="center"
        />

    <Button
        android:onClick="doBenchmark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BennchMark ALL"
        android:id="@+id/btnbenchmarkall"
        android:layout_gravity="center_horizontal" />

    <Button
        android:onClick="doReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnreset"
        android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
</LinearLayout>